import socket
import threading

host = "127.0.0.1"
port = 64738
server_name = "Test Server"
clients = []
nicknames = []
text_server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
voip_server = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)

text_server.bind((host, port))
text_server.listen()


def broadcast(message):
    for client in clients:
        client.send(message)


def text_handler(client):
    while True:
        try:
            message = client.recv(1024)
            broadcast(message)
        except:
            index = clients.index(client)
            clients.remove(client)
            client.close()
            nickname = nicknames[index]
            broadcast('{} Disconnected.'.format(nickname).encode('ascii'))
            nicknames.remove(nickname)
            break


def text_receiver():
    while True:
        client, address = text_server.accept()
        client.send('NICK'.encode('ascii'))
        nickname = client.recv(1024).decode('ascii')
        nicknames.append(nickname)
        clients.append(client)

        print('Connection from {} With nickname {}'.format(address, str(nickname)))
        broadcast('{} Connected'.format(nickname).encode('ascii'))
        client.send('Connected to {}'.format(server_name).encode('ascii'))

        thread = threading.Thread(target=text_handler, args=(client,))
        thread.start()

print('{} starting on {} with port {}'.format(server_name, host, port))
text_receiver()
